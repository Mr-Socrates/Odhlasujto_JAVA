<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pollName"
            android:id="@+id/votePollName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voteDesc"
            android:id="@+id/votePollDesc"
            android:textSize="18sp"
            android:layout_below="@+id/votePollName"
            android:layout_alignLeft="@+id/votePollName"
            android:layout_alignStart="@+id/votePollName" />

        <!--views for showing poll info-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pollNameID"
            android:text="Testové hlasování"
            android:textSize="18sp"
            android:layout_alignTop="@+id/votePollName"
            android:layout_alignRight="@+id/gridLayout"
            android:layout_alignEnd="@+id/gridLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pollDescID"
            android:textSize="18sp"
            android:text="Lore ipsum"
            android:layout_below="@+id/pollNameID"
            android:layout_alignRight="@+id/gridLayout"
            android:layout_alignEnd="@+id/gridLayout" />

        <!--layout for showing poll options | example-->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="25"
            android:id="@+id/gridLayout"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/votePollDesc"
            android:layout_centerHorizontal="true"
            android:background="#E2E3E3">

            <TextView
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:text="@string/option_name"
                android:textSize="18sp"
                android:layout_column="0"
                android:layout_row="0"
                android:id="@+id/optionName" />

            <TextView
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:text="Option 1"
                android:textSize="18sp"
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/optionID1" />

            <TextView
                android:layout_width="137dp"
                android:layout_height="40dp"
                android:text="Option 2"
                android:textSize="18sp"
                android:layout_column="0"
                android:layout_row="2"
                android:id="@+id/optionID2" />

            <ToggleButton
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/vote"
                android:id="@+id/optionVote"
                android:layout_row="1"
                android:layout_column="5"
                android:textOff="0"
                android:textOn="1" />

            <ToggleButton
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/vote"
                android:id="@+id/optionVote2"
                android:layout_row="2"
                android:layout_column="5"
                android:textOff="0"
                android:textOn="1" />

        </GridLayout>

        <Button
            android:id="@+id/btnSubmitVote"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_vote"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>